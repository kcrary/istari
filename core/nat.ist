lemma "nat_trichotomy"
/
  forall (m n : nat) . m < n % m = n : nat % n < m
/;

intro /m n/.
setEq /b/ /eqb m n/ /bool/ /Heq/.
symmetryIn /Heq/.
destruct /b/ /|/.
  {
  rewrite /<- Bool.istrue_iff_eq_true in Heq/.
  rewrite /-> istrue_eqb in Heq/.
  right >> left.
  hyp /Heq/.
