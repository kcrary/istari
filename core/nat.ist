lemma "lt_well_founded"
/
  forall n . Acc nat lt n
/;

inference.
intro /n/.
assert /forall m . m <= n -> Acc nat lt m/ /H/.
1:{
  apply /H/.
  apply /leq_refl/.
  }
natPrimInduction.

(* 0 *)
{
intro /m Hm/.
apply /Acc_intro/.
intro /p Hp/.
unfold /lt in Hp/.
so /leq_succ_0_not _ (leq_trans _ _ _ Hp Hm)/ /0/.
}

(* succ *)
{
reintro /u n Hu IH/.
intro /m Hm/.
apply /Acc_intro/.
intro /p Hp/.
apply /IH n/.
unfold /lt in Hp/.
apply /leq_succ_invert/.
exact /leq_trans _ _ _ Hp Hm/.
}
qed ();



