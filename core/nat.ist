lemma "leq_trans"
/
  forall m n p .
    m <= n
    -> n <= p
    -> m <= p
/;

inference.
intro /m/.
induction /m/.

(* 0 *)
{
intro /n p _ _/.
apply /leq_0_min/.
}

(* succ *)
{
intro /m IH n p Hmn Hnp/.
destruct /n/ /| n/.
  {
  so /leq_succ_0_not _ Hmn/ /0/.
  }
so /leq_succ_invert _ _ Hmn/ /Hmn'/.
destruct /p/ /| p/.
  {
  so /leq_succ_0_not _ Hnp/ /0/.
  }
so /leq_succ_invert _ _ Hnp/ /Hnp'/.
apply /leq_succ_succ/.
exact /IH _ _ Hmn' Hnp'/.
}
qed ();



lemma "leq_antisymm"
