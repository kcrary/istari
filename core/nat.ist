(* succ *)
{
intro /m IH n Hmn Hnm/.
destruct /n/ /| n/.
  {
  so /leq_succ_0_not _ Hmn/ /0/.
  }

  {
  compat.
  so /leq_succ_invert _ _ Hmn/ /Hmn'/.
  so /leq_succ_invert _ _ Hnm/ /Hnm'/.
  exact /IH _ Hmn' Hnm'/.
  }
}
qed ();



