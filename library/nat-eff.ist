lemma "istrue_leqb"
/
  forall m n .
    istrue (leqb m n) <-> m <= n
/;

inference.
intro /m/.
iterate /m/.

(* 0 *)
{
intro /(| n)/.
  {
  split.
    {
    intro /_/.
    reflexivity.
    }

    {
    intro /_/.
    unroll /leqb/ >> reduce //.
    apply /istrue_true/.
    }
  }

  {
  split.
    {
    intro /_/.
    apply /leq_0_min/.
    }

    {
    intro /_/.
    unroll /leqb/ >> reduce //.
    apply /istrue_true/.
    }
  }
}

(* succ *)
{
intro /m IH (| n)/.
  {
  split.
    {
    intro /H/.
    unroll /leqb in H/ >> reduce /H/.
    so /not_istrue_false H/ /0/.
    }

    {
    intro /H/.
    so /leq_succ_0_not _ H/ /0/.
    }
  }

  {
  unroll /leqb/ >> reduce //.
  split.
    {
    intro /H/.
    apply /leq_succ_succ/.
    exact /IH _ #1 H/.
    }

    {
    intro /H/.
    so /leq_succ_invert _ _ H/ /H'/.
    exact /IH _ #2 H'/.
    }
  }
}
qed ();



define /ltb m n/
/
  leqb (succ m) n
//
  nat -> nat -> bool
/;

introOf /m n/.
unfold /ltb/.
typecheck.
qed ();



lemma "istrue_ltb"
/
  forall m n .
    istrue (ltb m n) <-> m < n
/;

inference.
intro /m n/.
unfold /ltb , lt/.
apply /istrue_leqb/.
qed ();
